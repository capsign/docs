{
  "title": "CapSign Documentation",
  "description": "Enterprise-grade blockchain infrastructure made simple",
  "author": "CapSign Team",
  "language": "en",
  "gitbook": "3.2.3",
  "root": ".",
  "structure": {
    "readme": "README.md",
    "summary": "SUMMARY.md",
    "glossary": "GLOSSARY.md"
  },
  "variables": {
    "version": "1.0.0",
    "website": "https://capsign.io",
    "docs": "https://docs.capsign.com",
    "github": "https://github.com/capsign"
  },
  "plugins": [
    "advanced-emoji",
    "anchors",
    "codeblock-filename",
    "copy-code-button",
    "edit-link",
    "expandable-chapters",
    "github",
    "hide-element",
    "klipse",
    "mermaid-gb3",
    "prism",
    "search-pro",
    "sitemap-general",
    "splitter",
    "theme-api"
  ],
  "pluginsConfig": {
    "github": {
      "url": "https://github.com/capsign/docs"
    },
    "edit-link": {
      "base": "https://github.com/capsign/docs/edit/main",
      "label": "Edit This Page"
    },
    "sitemap-general": {
      "prefix": "https://docs.capsign.com/"
    },
    "theme-api": {
      "theme": "dark",
      "split": true
    },
    "hide-element": {
      "elements": [".gitbook-link"]
    },
    "prism": {
      "css": ["prism-themes/themes/prism-material-dark.css"]
    }
  },
  "styles": {
    "website": "styles/website.css",
    "pdf": "styles/pdf.css"
  },
  "pdf": {
    "pageNumbers": true,
    "fontSize": 12,
    "paperSize": "a4",
    "margin": {
      "right": 62,
      "left": 62,
      "top": 56,
      "bottom": 56
    }
  }
}
